<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header.ejs')  %>
    <link rel="stylesheet" href="submitDetailsPage/submitDetails.css">
</head>
<body>
    <div class="submitDetailsContainer">

        <%-include('./partials/navBars.ejs')  %>

        <div class="body">
            <form action="/addDetails" method="post">
                <h4>SUBMIT DETAILS</h4>

                <%-include('./partials/success_errorMessage.ejs')  %>

                <label for="firstName"></label>
                <div class="inputField">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="First Name" name="firstName">
                </div>

                <label for="lastName"></label>
                <div class="inputField">
                    <i class="fa-solid fa-user-tag"></i>
                    <input type="text" placeholder="Last Name" name="lastName">
                </div>

                <label for="phoneNumber"></label>
                <div class="inputField">
                    <i class="fa-solid fa-phone"></i>
                    <input type="text" placeholder="Phone Number" name="phoneNumber">
                </div>

                <label for="emailAddress"></label>
                <div class="inputField">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="text" placeholder="Email Address" name="emailAddress">
                </div>

                <label for="regNo"></label>
                <div class="inputField">
                    <i class="fa-solid fa-id-card"></i>
                    <input type="text" placeholder="Registration Number" name="regNo">
                </div>

                <label for="faculty"></label>
                <div class="inputField">
                    <i class="fa-solid fa-building-columns"></i>
                    <input type="text" placeholder="Faculty" name="faculty">
                </div>

                <label for="course"></label>
                <div class="inputField">
                    <i class="fa-solid fa-graduation-cap"></i>
                    <input type="text" placeholder="Course" name="course">
                </div>

                <label for="year"></label>
                <div class="inputField">
                    <i class="fa-solid fa-calendar"></i>
                    <input type="text" placeholder="Year of Study" name="year">
                </div>

                <div class="button">
                    <button>SUBMIT</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/VanillaJavascript.js"></script>
</body>
</html>